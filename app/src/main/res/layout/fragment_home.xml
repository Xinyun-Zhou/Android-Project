<?xml version="1.0" encoding="utf-8"?><!--
    Home fragment layout
    @author u7366711 Yuxuan Zhao
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_home_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:hint="Search for anything"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/search_48px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_home_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/layout_home_search">

        <TableRow>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_home_category_0"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="1"
                    app:icon="@drawable/lunch_dining_48px"
                    app:iconGravity="textEnd"
                    app:iconPadding="8dp"
                    app:iconSize="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="@id/bt_home_category_0"
                    app:layout_constraintTop_toBottomOf="@id/bt_home_category_0" />

                <Button
                    android:id="@+id/bt_home_category_1"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="17dp"
                    android:text="2"
                    app:icon="@drawable/health_and_safety_48px"
                    app:iconGravity="textEnd"
                    app:iconPadding="8dp"
                    app:iconSize="40dp"
                    app:layout_constraintStart_toEndOf="@id/bt_home_category_0"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Health"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="@id/bt_home_category_1"
                    app:layout_constraintTop_toBottomOf="@id/bt_home_category_1" />

                <Button
                    android:id="@+id/bt_home_category_2"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="17dp"
                    android:text="3"
                    app:icon="@drawable/face_48px"
                    app:iconGravity="textEnd"
                    app:iconPadding="8dp"
                    app:iconSize="40dp"
                    app:layout_constraintStart_toEndOf="@id/bt_home_category_1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Beauty"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="@id/bt_home_category_2"
                    app:layout_constraintTop_toBottomOf="@id/bt_home_category_2" />

                <Button
                    android:id="@+id/bt_home_category_3"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="17dp"
                    android:text="4"
                    app:icon="@drawable/styler_48px"
                    app:iconGravity="textEnd"
                    app:iconPadding="8dp"
                    app:iconSize="40dp"
                    app:layout_constraintStart_toEndOf="@id/bt_home_category_2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Fashion"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="@id/bt_home_category_3"
                    app:layout_constraintTop_toBottomOf="@id/bt_home_category_3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </TableRow>

        <TableRow>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_home_category_4"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="5"
                    app:icon="@drawable/bed_48px"
                    app:iconGravity="textEnd"
                    app:iconPadding="8dp"
                    app:iconSize="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="@id/bt_home_category_4"
                    app:layout_constraintTop_toBottomOf="@id/bt_home_category_4" />

                <Button
                    android:id="@+id/bt_home_category_5"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="17dp"
                    android:text="6"
                    app:icon="@drawable/devices_48px"
                    app:iconGravity="textEnd"
                    app:iconPadding="8dp"
                    app:iconSize="40dp"
                    app:layout_constraintStart_toEndOf="@id/bt_home_category_4"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Electronics"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="@id/bt_home_category_5"
                    app:layout_constraintTop_toBottomOf="@id/bt_home_category_5" />

                <Button
                    android:id="@+id/bt_home_category_6"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="17dp"
                    android:text="3"
                    app:icon="@drawable/book_48px"
                    app:iconGravity="textEnd"
                    app:iconPadding="8dp"
                    app:iconSize="40dp"
                    app:layout_constraintStart_toEndOf="@id/bt_home_category_5"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Books"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="@id/bt_home_category_6"
                    app:layout_constraintTop_toBottomOf="@id/bt_home_category_6" />

                <Button
                    android:id="@+id/bt_home_category_7"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="17dp"
                    android:text="4"
                    app:icon="@drawable/more_horiz_48px"
                    app:iconGravity="textEnd"
                    app:iconPadding="8dp"
                    app:iconSize="40dp"
                    app:layout_constraintStart_toEndOf="@id/bt_home_category_6"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="@id/bt_home_category_7"
                    app:layout_constraintTop_toBottomOf="@id/bt_home_category_7" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>